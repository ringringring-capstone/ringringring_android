<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".main.view.member.membershipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_back_login"
            android:layout_width="15dp"
            android:layout_height="22dp"
            android:background="@drawable/btn_back_black"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"/>

        <include
            android:id="@+id/group_membership_name"
            layout="@layout/include_membership_name"/>

        <include
            android:id="@+id/group_membership_idpw"
            layout="@layout/include_membership_idpw"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_membership"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/background_btn_lightgray"
            android:fontFamily="@font/ibm_plexsans_kr_semibold"
            android:text="회원가입"
            android:enabled="false"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>